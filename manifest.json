{
    "manifest_version": 3,
    "name": "Fast Link",
    "version": "1.0",
  
    "description": "An Chrome Extension to open links faster by hovering over them and prerendering the content",
  
    "icons": {
        "16": "icons/link_icon16.png",
        "32": "icons/link_icon32.png",
        "48": "icons/link_icon48.png",
        "128": "icons/link_icon128.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ]
  }
  